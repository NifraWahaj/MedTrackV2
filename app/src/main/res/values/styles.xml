<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueMain</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorAccent">@color/bluelight</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

    </style>
    <!-- Base application theme -->


    <!-- Custom PopupMenu style -->
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <!-- Set the background color of PopupMenu -->
        <item name="android:popupBackground">@color/bluelight</item>
        <!-- Optional: Set other styles (for example, text color) -->
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <!-- fragment_med_step2 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How often do you take this medication?"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radioGroupFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioOnceDaily"
            android:text="Once daily" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioTwiceDaily"
            android:text="Twice daily" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioInterval"
            android:text="Interval (e.g., every X hours, every X days)" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioSpecificDays"
            android:text="Specific days of the week (e.g., Mon, Wed, Fri)" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/daysSelectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginTop="16dp">
        <!-- Days of the week selection -->
        <TextView
            android:id="@+id/dayMonday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/dayTuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tue"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/dayWednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wed"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/dayThursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/dayFriday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fri"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/daySaturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sat"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/daySunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="4dp" />
    </LinearLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next" />
</LinearLayout>

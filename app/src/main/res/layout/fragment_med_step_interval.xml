<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvIntervalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select interval type"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Toggle Buttons for "Every X hours" and "Every X days" -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ToggleButton
            android:id="@+id/toggleEveryXHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Every X hours"
            android:textOn="Every X hours"
            android:checked="true"
            android:layout_marginEnd="8dp" />

        <ToggleButton
            android:id="@+id/toggleEveryXDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Every X days"
            android:textOn="Every X days" />
    </LinearLayout>

    <!-- Start Time -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonPickStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Start Time" />

    <TextView
        android:id="@+id/textViewStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06:00 am"
        android:layout_marginTop="8dp"
        android:textSize="14sp" />

    <!-- End Time -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonPickEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select End Time" />

    <TextView
        android:id="@+id/textViewEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:00 pm"
        android:layout_marginTop="8dp"
        android:textSize="14sp" />

    <!-- Interval Hours -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interval (in hours)"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextIntervalHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter hours interval"
        android:inputType="number"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="24dp" />
</LinearLayout>

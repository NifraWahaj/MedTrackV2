<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:importantForAutofill="no"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    android:background="@color/bg_main">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/logo" />

    <!-- Question Text -->
    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/which_medication_would_you_like_to_set_the_reminder_for"
        android:textSize="@dimen/addmedfrag_QuestiontextSize"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/fontColormAIN" />

    <!-- Medication Name Input with Bottom Line -->
    <EditText
        android:id="@+id/editTextMedicationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/med_name"
        android:importantForAutofill="no"
        android:textSize="@dimen/addmedfrag_nonQuestiontextSize"
        android:padding="16dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="8dp"
        android:inputType="text"
        android:textColorHint="@color/greytext"
        android:textColor="@color/fontColormAIN"
        tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />

    <!-- Bottom Line for EditText -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blueMain"
        android:layout_marginBottom="32dp" />

    <!-- Use a spacer to push the button to the bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="UselessLeaf" />

    <!-- Next Button with Rounded Corners -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/med_next"
        android:background="@drawable/button_rounded"
        android:textColor="#FFFFFF"
        android:paddingVertical="12dp"
        android:elevation="4dp"
        android:layout_marginBottom="32dp"
        tools:ignore="VisualLintButtonSize" />

</LinearLayout>

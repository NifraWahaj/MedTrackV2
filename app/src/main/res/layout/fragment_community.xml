<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CommunityFragment">

    <!-- Toolbar with Back Button and Page Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutCommunity"
        android:padding="16dp"
         android:background="@color/blueDark"
        android:layout_gravity="top|center_horizontal"
        android:weightSum="1">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go_back"
            android:contentDescription="Back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_gravity="center_vertical" />

        <!-- Page Title (centered) -->
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Community"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- Search Bar with Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginStart="5dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="30dp">

        <!-- EditText for entering search query -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="   Search..."
            android:paddingStart="16dp"

            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:background="@android:drawable/edit_text" />

        <!-- Search Button with Icon -->
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/search2"
            android:contentDescription="Search"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

    <!-- Community Button placed below the search bar -->
    <Button
        android:id="@+id/buttonCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write_blog"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal|end"
        android:layout_marginTop="16dp" />

    <!-- RecyclerView to display the list of items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCommunity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        tools:listitem="@layout/single_item_community" />

</LinearLayout>
